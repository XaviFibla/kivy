ScreenManager:
    Virtualio:
        name: 'virtualio'
 
<DrawerClickableItem@MDNavigationDrawerItem>
    focus_color: "#e7e4c0"
    text_color: "#4a4939"
    icon_color: "#4a4939"
    ripple_color: "#c5bdd2"
    selected_color: "#0c6c4d"


<DrawerLabelItem@MDNavigationDrawerItem>
    text_color: "#4a4939"
    icon_color: "#4a4939"
    focus_behavior: False
    selected_color: "#4a4939"
    _no_ripple_effect: True

<Virtualio>:
    MDScreen:
        MDTopAppBar:
            title: "Virtualio"
            pos_hint: {"top": 1}
            md_bg_color: "#e7e4c0"
            specific_text_color: "#4a4939"
            left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
        
        MDNavigationLayout:
            MDScreenManager:
                id: screen_manager
                MDScreen:
                    name: "screen1"
                    MDBoxLayout:                        
                        MDLabel:
                            text:"Screen 1"
                            halign: "center"
                MDScreen:
                    name: "screen2"                 
                    MDIcon:
                        icon: "gmail"
                        pos_hint: {"center_x": .5, "center_y": .5}
        MDNavigationDrawer:
            id: nav_drawer    
            elevation: 12     
            radius:(0, 16, 16, 0)  
            ContentNavigationDrawer:
                manager: screen_manager
                nav_drawer: nav_drawer
<ContentNavigationDrawer>:
    MDNavigationDrawerMenu:
        MDNavigationDrawerHeader:
            title: "Virtualio"
            title_color: "#4a4939"
            text: "Men√∫"
            spacing: "4dp"
            padding: "12dp", 0, 0, "56dp"

        MDNavigationDrawerLabel:
            text: "Mail"

        DrawerClickableItem:
            id:"test"
            icon: "gmail"
            right_text: "+99"
            text_right_color: "#4a4939"
            text: "Inbox"
            on_release: 
                root.nav_drawer.set_state("close")
                root.manager.current="screen1"     

        DrawerClickableItem:
            icon: "send"
            text: "Outbox"
            on_release: 
                root.nav_drawer.set_state("close")
                root.manager.current="screen2"  

        MDNavigationDrawerDivider:

        MDNavigationDrawerLabel:
            text: "Labels"

        DrawerLabelItem:
            icon: "information-outline"
            text: "Label"


