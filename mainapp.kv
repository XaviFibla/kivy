#:import LoginScreen views.LoginScreen
#:import AboutScreen views.AboutScreen
# Global UI layout dimensions
#:import Window kivy.core.window.Window
#:set screen_size (Window.size[0]**2 + Window.size[1]**2)**0.5
#:set large_font screen_size * 0.04
#:set normal_font screen_size * 0.02
#:set rel_space screen_size * 0.01
#:set list_space screen_size * 0.005
#:set widget_elevation dp(8)


ScreenManager:
    SplashScreen:
        name: 'splash'
    LoginScreen:
        name: 'login'
    Virtualio:
        name: 'virtualio'

 
<SplashScreen>:
    md_bg_color: app.theme_cls.primary_color
    MDLabel:
        text: "Splash Screen"
        halign: "center"

<DrawerClickableItem@MDNavigationDrawerItem>
    focus_color: "#e7e4c0"
    text_color: "#4a4939"
    icon_color: "#4a4939"
    ripple_color: "#c5bdd2"
    selected_color: "#0c6c4d"


<DrawerLabelItem@MDNavigationDrawerItem>
    text_color: "#4a4939"
    icon_color: "#4a4939"
    focus_behavior: False
    selected_color: "#4a4939"
    _no_ripple_effect: True

<Virtualio>:
    MDTopAppBar:
        title: "Virtualio"
        pos_hint: {"top": 1}      
        md_bg_color: app.theme_cls.primary_color
        specific_text_color: "#4a4939"
        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
        
    MDNavigationLayout:
        MDScreenManager:
            id: screen_manager
            MDScreen:
                name: "screen1"
                MDBoxLayout:                        
                    MDLabel:
                        text:"Screen 1"
                        halign: "center"
            MDScreen:
                name: "screen2"                 
                MDIcon:
                    icon: "gmail"
                    pos_hint: {"center_x": .5, "center_y": .5}
            MDScreen:
                name: "about"
                MDBoxLayout:                        
                    AboutScreen:
                
    MDNavigationDrawer:
        id: nav_drawer    
        elevation: 12     
        radius:(0, 16, 16, 0)  
        ContentNavigationDrawer:
            manager: screen_manager
            nav_drawer: nav_drawer
<ContentNavigationDrawer>:
    MDNavigationDrawerMenu:
        MDNavigationDrawerHeader:
            title: "Virtualio"
            title_color: "#4a4939"
            text: "Men√∫"
            spacing: "4dp"
            padding: "12dp", 0, 0, "56dp"

        MDNavigationDrawerLabel:
            text: "Mail"

        DrawerClickableItem:
            id:"test"
            icon: "gmail"
            right_text: "+99"
            text_right_color: "#4a4939"
            text: "Inbox"
            on_release: 
                root.nav_drawer.set_state("close")
                root.manager.current="screen1"     

        DrawerClickableItem:
            icon: "send"
            text: "Outbox"
            on_release:           
                root.nav_drawer.set_state("close")
                root.manager.current="about"  

     


